<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.admin.system.mapper.JobMapper">

    <!--通用查询映射结果-->
    <resultMap id="BaseResultMap" type="com.boot.admin.system.model.Job">
        <id column="job_id" property="jobId"/>
        <result column="name" property="name"/>
        <result column="is_enabled" property="enabled"/>
        <result column="job_sort" property="jobSort"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!--通用查询结果列-->
    <sql id="BaseColumnList">
        job_id, name, is_enabled, job_sort, create_by, update_by, create_time, update_time
    </sql>

    <select id="selectJobListByUserId" resultType="com.boot.admin.system.model.Job">
        SELECT j.*
        FROM sys_job j
        LEFT JOIN sys_user_job uj ON j.job_id = uj.job_id
        WHERE uj.user_id = #{userId}
    </select>
</mapper>
